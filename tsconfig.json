{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "removeComments": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["es6", "esnext"]
  },
  "exclude": ["node_modules", "dist"]
}
